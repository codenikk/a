#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cout << "How many students were at the program: ";
    cin >> n;

    int arr[n];  // dynamic array
    for (int i = 0; i < n; i++) {
        cout << "Enter roll number of present student " << i + 1 << ": ";
        cin >> arr[i];
    }

    cout << "\nList of present students:\n";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    char ch;
    do {
        int key, pres = 0;
        cout << "\nEnter roll number to check presence: ";
        cin >> key;

        for (int i = 0; i < n; i++) {
            if (arr[i] == key) {
                pres = 1;
                break;
            }
        }

        if (pres == 1)
            cout << "student is present.\n";
        else
            cout << "student is absent.\n";

        cout << "Do you want to continue (y/n)? ";
        cin >> ch;
    } while (ch == 'y' || ch == 'Y');
    sort(arr, arr + n);

    cout << "\nSorted list of present students: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    cout << endl;
    return 0;
}
