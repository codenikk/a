#include<iostream>
using namespace std;

int main()
{
    int i, n, j;
    float t;
    cout << "Enter the number of 1st year students: ";
    cin >> n;

    float A[n];
    cout << "Enter percentage of students:\n";
    for (i = 0; i < n; i++)
    {
        cin >> A[i];
    }

    for (i = 0; i < n - 1; i++)
    {
        for (j = 0; j < n - i - 1; j++)
        {
            if (A[j] > A[j + 1])
            {
                t = A[j];
                A[j] = A[j + 1];
                A[j + 1] = t;
            }
        }
    }

    cout << "\nSorted percentage in ascending order: ";
    for (i = 0; i < n; i++)
    {
        cout << A[i] << " ";
    }

    cout << "\nTop 5 students: ";
    int count = (n < 5) ? n : 5;
    for (i = n - 1; i >= n - count; i--)
    {
        cout << A[i] << " ";
    }

    cout << endl;
    return 0;
}
